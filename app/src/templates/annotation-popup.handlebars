<div class="modal fade" id="annotation-modal" tabindex="-1" role="dialog" aria-labelledby="annotation-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="annotation-modal-label">What is the motion relationship?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Label the relationship between <b>{{startId}}</b> and <b>{{endId}}</b></p>
                <div class="container-fluid relationship-selector">
                    <div class="row select-row">
                        <div class="col-md-6">
                            <div class="card" data-value="no-relationship">
                                <div class="card-body">
                                    <div>
                                        <i class="far fa-circle fa-6x"></i>
                                    </div>
                                    <div class="label d-flex align-items-center justify-content-center">
                                        No relationship
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card" data-value="gives-way">
                                <div class="card-body">
                                    <div>
                                        <i class="fas fa-hand-paper fa-6x"></i>
                                    </div>
                                    <div class="label d-flex align-items-center justify-content-center">
                                        Gives way to
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card" data-value="group">
                                <div class="card-body">
                                    <div>
                                        <i class="fas fa-users fa-6x"></i>
                                    </div>
                                    <div class="label d-flex align-items-center justify-content-center">
                                        Moves together as a group
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card" data-value="avoids">
                                <div class="card-body">
                                    <div>
                                        <i class="fas fa-retweet fa-6x"></i>
                                    </div>
                                    <div class="label d-flex align-items-center justify-content-center">
                                        Avoids
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add annotation</button>
            </div>
        </div>
    </div>
</div>
